<div class="mx-3 my-3">
  <div class="w-100 border-bottom mb-4 d-flex flex-row justify-content-between align-items-center">
    <h2> Sobre <%= @student.name %> </h2>

      <% if current_user.user_type == 'admin' %>
        <div class="d-flex flex-row align-items-center">
          <button type="button" class="btn btn-outline-primary">
            <%= link_to "Editar", edit_student_path(@student) %>
          </button>
          <%= button_to "Apagar", @student, method: :delete, class: 'btn btn-outline-danger text-white ms-3' %>
          <button type="button" class="btn btn-outline-light ms-3">
            <%= link_to "Voltar", students_path %>
          </button>
        </div>
      <% end %>
  </div>
  <div class="d-flex flex-column justify-content-between">\
    <span> <strong>Id:</strong> <%= @student.id %> </span>
    <span> <strong>Nome:</strong> <%= @student.name %> </span>
    <span> <strong>Idade:</strong> <%= @student.age %> </span>
    <span> <strong>GRR:</strong> <%= @student.register %> </span>
    <% if @student.address != nil %>
      <span> <strong>Endere√ßo:</strong> <%= @student.address.streat %>, <%= @student.address.number %> </span>
    <% end %>
    <span> <strong>Universidade:</strong> <%= @student.college.name %> </span>
  </div>
</div>
