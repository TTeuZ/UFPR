<div class="mx-3 my-3">
  <div class="w-100 border-bottom mb-4 d-flex flex-row justify-content-between align-items-center">
    <h2> Matérias </h2>
    <% if current_user.user_type == 'admin' %>
      <button type="button" class="btn btn-outline-success">
        <%= link_to "Adicionar", new_subject_path %>
      </button>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nome</th>
        <th scope="col">Código</th>
        <% if current_user.user_type == 'admin' %>
          <th scope="col" class="text-end">Ações</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td> <%= subject.id %> </td>
          <td> <%= subject.name %> </td>
          <td> <%= subject.code %> </td>
          <% if current_user.user_type == 'admin' %>
            <td class="d-flex flex-row justify-content-end" align='right'> 
              <button type="button" class="btn btn-outline-light btn-sm">
                <%= link_to "Editar", edit_subject_path(subject) %>
              </button>
              <%= button_to "Deletar", subject, method: :delete, class: 'btn btn-outline-danger btn-sm text-white ms-3' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

