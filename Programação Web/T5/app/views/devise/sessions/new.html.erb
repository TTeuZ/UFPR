
<div class="d-flex flex-column align-items-center justify-content-center full_height w-100">
  <h2>Logar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-label' %>
      </div>
    <% end %>

    <div class="actions mt-3 d-flex flex-column w-100">
      <%= f.submit "Logar", class: 'btn btn-outline-secondary text-white align-self-center' %>
    </div>
  <% end %>
