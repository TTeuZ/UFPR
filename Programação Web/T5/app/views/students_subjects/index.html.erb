<div class="mx-3 my-3">
  <div class="w-100 border-bottom mb-4 d-flex flex-row justify-content-between align-items-center">
    <h2> Endereços </h2>
    <% if current_user.user_type == 'admin' %>
      <button type="button" class="btn btn-outline-success">
        <%= link_to "Adicionar", new_students_subject_path %>
      </button>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Estudante</th>
        <th scope="col">Matéria</th>
        <% if current_user.user_type == 'admin' %>
          <th scope="col" class="text-end">Ações</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @students_subjects.each do |students_subject| %>
        <tr>
          <td> <%= students_subject.id %> </td>
          <td> <%= students_subject.student.name %> </td>
          <td> <%= students_subject.subject.name %> </td>
          <% if current_user.user_type == 'admin' %>
            <td class="d-flex flex-row justify-content-end" align='right'> 
              <button type="button" class="btn btn-outline-light btn-sm">
                <%= link_to "Editar", edit_students_subject_path(students_subject) %>
              </button>
              <%= button_to "Deletar", students_subject, method: :delete, class: 'btn btn-outline-danger btn-sm text-white ms-3' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
